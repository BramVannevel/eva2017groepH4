<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projecten3.eva.Views.Fragments.VegagramPhotoFragment"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/photograph_taken"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:elevation="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/vegagram_check"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/share_vegagram"
                android:gravity="left|center"
                android:layout_marginLeft="35dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/share_facebook"
                android:gravity="right|center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"/>
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/facebook_check"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <Button
            android:id="@+id/retake_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retake"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:elevation="4dp"/>
        <Button
            android:id="@+id/save_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:elevation="4dp"/>
    </LinearLayout>
</LinearLayout>